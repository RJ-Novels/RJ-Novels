---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
     xmlns:atom="http://www.w3.org/2005/Atom">

<channel>
  <title>RJ Novels</title>
  <link>{{ site.url }}{{ site.baseurl }}/</link>
  <description>Latest novel updates from RJ Novels</description>

  <atom:link
    href="{{ site.url }}{{ site.baseurl }}/novels.xml"
    rel="self"
    type="application/rss+xml" />

  {% assign novels = site.novels | sort: "date" | reverse %}
  {% for novel in novels %}

  <item>
    <title>{{ novel.title | xml_escape }}</title>

    <link>{{ site.url }}{{ site.baseurl }}{{ novel.url }}</link>

    <guid isPermaLink="true">
      {{ site.url }}{{ site.baseurl }}{{ novel.url }}
    </guid>

    <pubDate>
      {{ novel.date | date: "%a, %d %b %Y %H:%M:%S %z" }}
    </pubDate>

    <description><![CDATA[
      {% if novel.cover %}
      <img src="{{ novel.cover }}" /><br>
      {% endif %}
      {{ novel.description | default: novel.excerpt }}
    ]]></description>
  </item>

  {% endfor %}

</channel>
</rss>
